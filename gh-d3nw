#!/bin/sh

if [ "$#" -eq 0 ]; then
    echo "Usage:"
    echo " $0 install"
    echo " $0 up"
    echo " $0 down"
    echo " $0 shell"
    exit 1
fi

TOP=$(


if [ "$1" = "up" ]; then
  docker compose up -d
  exit 0
fi

if [ "$1" = "down" ]; then
  docker compose down
  exit 0
fi

if [ "$1" = "shell" ]; then
  docker exec -it web sh
  exit 0
fi

if [ "$1" = "install" ]; then
  
  wget -nv https://upload.wikimedia.org/wikipedia/commons/8/8a/Jira_Logo.svg -O web/jira.svg
  wget -nv https://upload.wikimedia.org/wikipedia/commons/8/88/Atlassian_Confluence_2017_logo.svg -O web/confluence.svg
  wget -nv https://upload.wikimedia.org/wikipedia/commons/e/e1/GitLab_logo.svg -O web/gitlab.svg
  wget -nv https://upload.wikimedia.org/wikipedia/commons/9/91/Octicons-mark-github.svg -O web/github.svg
  wget -nv https://upload.wikimedia.org/wikipedia/commons/b/b9/Slack_Technologies_Logo.svg -O web/slack.svg
  wget -nv https://upload.wikimedia.org/wikipedia/commons/1/12/Rocket.Chat_Logo.svg -O rocketchat.svg
  wget -nv https://upload.wikimedia.org/wikipedia/commons/b/b8/YouTube_Logo_2017.svg -O youtube.svg
  wget -nv https://upload.wikimedia.org/wikipedia/commons/9/95/Instagram_logo_2022.svg -O instagram.svg
  wget -nv https://upload.wikimedia.org/wikipedia/commons/c/ce/X_logo_2023.svg -O x.svg
  wget -nv https://upload.wikimedia.org/wikipedia/commons/3/3b/Grafana_icon.svg -O grafana.svg
  exit 0
fi

echo "Invalid option: $1"
exit 1


